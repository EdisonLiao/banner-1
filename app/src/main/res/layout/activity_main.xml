<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <vip.frendy.kbanner.KBBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:banner_indicatorGravity="bottom"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_contentBottomMargin="24dp"
        app:banner_contentLeftMargin="45dp"
        app:banner_contentRightMargin="45dp"
        app:banner_transitionEffect="clip"/>

    <vip.frendy.kbanner.KBBanner
        android:id="@+id/banner2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        app:banner_transitionEffect="MZ"
        app:banner_contentLeftMargin="16dp"
        app:banner_contentRightMargin="16dp"
        app:banner_isNeedShowIndicator="false"
        app:banner_pointContainerBackground="@android:color/transparent" />
</LinearLayout>